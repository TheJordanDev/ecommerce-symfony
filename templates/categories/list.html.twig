{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie {{ category.name }}{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{ category.name }}</h1>
            </div>
            {% if products.data is defined %}
                {% for product in products.data %}
                    <div class="col-3 mb-3">
                        <article class="card h-100">
                            <div class="card-body">
                                <h2 class="card-title">{{ product.name }}</h2>
                                <p class="card-text">{{ product.description }}</p>
                                <a href="{{ path('products_details', {"slug": product.slug }) }}" class="btn btn-primary position-relative">Voir les détails
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        {{ product.price / 100 }} €
                                    </span>
                                </a>
                            </div>
                        </article>
                    </div>
                {% endfor %}
                {% set path = 'categories_list' %}
                {% set slug = category.slug %}
                {% set pages = products.pages %}
                {% set currentPage = products.page %}
                {% include "_partials/_pagination.html.twig" %}
            {% else %}
                    <div class="h-100 d-flex align-items-center justify-content-center mt-5 mb-5">
                        <h2><u>Aucun produits</u></h2>
                    </div>
            {% endif %}
            


        </section>
    </main>
{% endblock %}
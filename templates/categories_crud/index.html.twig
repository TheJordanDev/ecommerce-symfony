{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CategoryOrder</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.categoryOrder }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a href="{{ path('app_categories_crud_show', {'id': category.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_categories_crud_edit', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune Cat√©gorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categories_crud_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
